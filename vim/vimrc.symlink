set nu
filetype plugin on
filetype indent on

set autoread
set ignorecase
set smartcase
set hlsearch
set incsearch

syntax enable
colorscheme solarized
set background=dark
set encoding=utf8
set ffs=unix,dos,mac

set nobackup
set nowb
set noswapfile

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set lbr
set tw=500

set ai
set si
set wrap

autocmd FileType ruby setlocal shiftwidth=2 tabstop=2
